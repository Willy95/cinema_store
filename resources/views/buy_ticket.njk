            <label>Asiento</label><br>
            <input readonly type="number" name="asiento" value="" id="asiento" placeholder="No asignado"><br>

            <label>Destino</label><br>
            <input type="text" name="destino" value="" id="destino" placeholder="Eje: Guadalajara"><br>

            <button type="submit" name="button" id="reservar">Reservar</button>
        </form><br><br>
    </section>

